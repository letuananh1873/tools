{
    "name": "pehape/tools",
    "type": "library",
    "description": "Tools, scripts and assets for Pehape libraries",
    "keywords": ["tools", "assets", "scripts", "pehape"],
    "license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
    "authors": [
        {
            "name": "Tomas Rathouz",
            "email": "trathouz@gmail.com",
            "homepage": "http://pehape.cz"
        }
    ],
    "support": {
        "email": "trathouz@gmail.com",
        "issues": "https://github.com/pehape/tools/issues/"
    },
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "^3.1"
    },
    "require-dev": {
        "codeception/codeception": "2.1.*",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Pehape\\Tools\\": "src"
        },
        "classmap": [
            "src/Exceptions/exceptions.php"
        ]
    },
    "scripts": {
        "test": "vendor\\bin\\codecept run --env local",
        "syntax": "vendor\\bin\\phpcs --standard=assets/coding-standards/standards.xml --colors --encoding=utf-8 -sp src/",
        "syntax-fix": "vendor\\bin\\phpcbf --standard=assets/coding-standards/standards.xml src/"
    }
}
